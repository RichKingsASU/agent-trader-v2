VITE_MISSION_CONTROL_BASE_URL=

# Firebase (optional). If empty, the Ops UI runs without Firebase.
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Local safety default: in dev, the UI will connect to Firebase emulators unless explicitly disabled.
# Set to "false" to intentionally allow the dev server to talk to real Firebase.
VITE_USE_FIREBASE_EMULATORS=true

# Optional per-service overrides. Supports either:
# - CSV: firestore=localhost:8080,auth=localhost:9099,functions=localhost:5001,storage=localhost:9199
# - JSON: {"firestore":"localhost:8080","auth":"localhost:9099","functions":"localhost:5001","storage":"localhost:9199"}
#
# Defaults (if unset): Firestore 8080, Auth 9099, Functions 5001, Storage 9199 on localhost.
VITE_FIREBASE_EMULATOR_HOSTS=
