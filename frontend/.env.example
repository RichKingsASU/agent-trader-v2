VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# Operator-only access (comma-separated).
# If both are empty, access is unrestricted (useful for local dev).
VITE_OPERATOR_EMAILS=
VITE_OPERATOR_DOMAINS=

# Controls whether the UI allows creating accounts. Recommended: false (operators provisioned manually).
VITE_AUTH_ALLOW_SIGNUP=false

# Optional: enable the tenant-scoped profile doc subscription in AuthContext.
# Keep false until Firestore is enabled/configured for your project.
VITE_ENABLE_FIRESTORE_PROFILE=false
