FROM python:3.12-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONPATH=/app

# Build fingerprint (baked into image; can be overridden at deploy-time).
ARG GIT_SHA=unknown
ARG BUILD_ID=unknown
ARG BUILD_TIME_UTC=unknown
ARG IMAGE_REF=unknown
ENV GIT_SHA=$GIT_SHA \
    BUILD_ID=$BUILD_ID \
    BUILD_TIME_UTC=$BUILD_TIME_UTC \
    IMAGE_REF=$IMAGE_REF

RUN useradd --create-home --uid 10001 --shell /usr/sbin/nologin appuser

COPY . /app

RUN python -m pip install --no-cache-dir -r /app/backend/strategy_engine/requirements.txt

RUN chown -R appuser:appuser /app
USER 10001

CMD ["python", "-m", "backend.strategy_engine.driver", "--execute"]