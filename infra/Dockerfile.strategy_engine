FROM python:3.12-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONPATH=/app \
    PORT=8080

# Build fingerprint (baked into image; can be overridden at deploy-time).
ARG GIT_SHA=unknown
ARG BUILD_ID=unknown
ARG BUILD_TIME_UTC=unknown
ARG IMAGE_REF=unknown
ENV GIT_SHA=$GIT_SHA \
    BUILD_ID=$BUILD_ID \
    BUILD_TIME_UTC=$BUILD_TIME_UTC \
    IMAGE_REF=$IMAGE_REF

RUN useradd --create-home --uid 10001 --shell /usr/sbin/nologin appuser

COPY . /app

# Use the shared backend requirements (FastAPI + httpx needed for health contracts).
RUN python -m pip install --no-cache-dir -r /app/backend/requirements.txt

RUN chown -R appuser:appuser /app
USER 10001

EXPOSE 8080

# Healthcheck should not flap on halted markets.
HEALTHCHECK --interval=30s --timeout=3s --start-period=20s --retries=3 \
  CMD python -c "import urllib.request; urllib.request.urlopen('http://127.0.0.1:8080/livez').read()" || exit 1

# Serve health endpoints and run safety-gated cycles (evaluation only).
CMD ["uvicorn", "backend.strategy_engine.service:app", "--host", "0.0.0.0", "--port", "8080"]