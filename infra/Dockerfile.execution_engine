FROM python:3.12-slim

WORKDIR /app

# Optional native deps (psycopg / TLS roots)
RUN apt-get update && apt-get install -y --no-install-recommends build-essential libpq-dev ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install python deps first for better layer caching
COPY backend/requirements.txt /app/backend/requirements.txt
RUN pip install --no-cache-dir -r backend/requirements.txt

# Copy the repo after deps are installed
COPY . /app

# Cloud Run listens on $PORT (default 8080)
ENV PORT=8080

CMD ["uvicorn", "backend.services.execution_service.app:app", "--host", "0.0.0.0", "--port", "8080"]

