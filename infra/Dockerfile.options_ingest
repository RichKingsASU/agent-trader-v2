FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && apt-get install -y build-essential libpq-dev && rm -rf /var/lib/apt/lists/*

COPY . /app

RUN pip install --no-cache-dir -r backend/strategy_service/requirements.txt

ENTRYPOINT ["python"]
CMD ["-m", "backend.streams.alpaca_option_window_ingest"]
